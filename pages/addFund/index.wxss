/**index.wxss**/
.header-search {
  border-radius: 40rpx;
  display: flex;
  margin: 0 18rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 20rpx;
  background: #eff0f4;
  border: none;
  font-size: 12px;  
}
.header-search-icon {
  width: 18px;
}
.header-search-input {
  margin-left: 30rpx;
  flex: 1;
  height: 60rpx;
  line-height: 60px;
}
.header {
  height: 300rpx;
  background-color: beige;
}
.header-label {
  font-size: small;
  color: #ccc;
}
.header-divider {
  font-size: small;
  margin: 0 10px;
  color: aquamarine;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.fund-item {
  height: 48px;
  line-height: 48px;
  display: flex;
  width: 100%;
  text-align: left;
  padding-left: 80rpx;
  border-bottom: 1px solid #ccc;
}
.fund-item-id {
  width: 100rpx;
}
.fund-item-name {
  width: 400rpx;
  margin-left: 80rpx;
  overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    white-space: nowrap;
}