/**index.wxss**/
.header-title {
  padding-left: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  background: #d28660;
  color: #fff;
  box-shadow: 0 2px 8px 0 rgba(0,0,0,0.05);
  margin: 20rpx 0;
}
.form-item {
  display: flex;
  font-size: 12px;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #3f44521f;
  background: #fff;
}
.form-label {
  width: 250rpx;
  text-align: right;
}
.form-label-icon {
  width: 14px;
  height: 14px;
  vertical-align: middle;
  margin-right: 4px;  
}
.form-option {
  flex: 1;
  vertical-align: bottom;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 24rpx;  
  
}
.btn-area {
  text-align: center;
  margin-top: 40rpx;
  padding: 0 100rpx;
}
.submit-btn {
  width: 100%;
  border: none;
  display: inline-block;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 24rpx;
  background: #d2866085;
  border-radius: 8rpx;
  border: 1px solid #d28660;
  padding: 0 !important;
}
.delete-btn {
  width: 100%;
  border: none;
  display: inline-block;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 24rpx;
  background: #eee;
  border-radius: 8rpx;
  border: 1px solid #ccc;
  padding: 0 !important;
}